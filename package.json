{
  "name": "vscode-css-modules",
  "displayName": "CSS Modules Syntax Highlighter",
  "description": "An extension to add CSS Modules syntax highlighting to VSCode.",
  "version": "1.1.0",
  "publisher": "andrewleedham",
  "scripts": {
    "deploy": "semantic-release"
  },
  "author": {
    "name": "Andrew Leedham",
    "url": "http://andrewleedham.me"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "css-modules.injection",
        "path": "./syntaxes/css-modules.json",
        "injectTo": [
          "source.css"
        ]
      },
      {
        "scopeName": "css-modules.sass.injection",
        "path": "./syntaxes/css-modules.sass.json",
        "injectTo": [
          "source.sass"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndrewLeedham/vscode-css-modules"
  },
  "keywords": [
    "language support",
    "vscode",
    "extension",
    "css",
    "css-modules",
    "scss",
    "sass"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#FFFFFF"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "semantic-release-vsce",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "husky": "^1.3.1",
    "semantic-release": "^15.13.3",
    "semantic-release-vsce": "^2.2.6"
  },
  "dependencies": {}
}
